@model MODULE6_TP1_BO.Samourai

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Arme)
        </dt>
        @{
            if (Model.Arme != null)
            {
                <dd>
                    @Html.DisplayFor(model => model.Arme.Nom)
                </dd>
            }
        }

        <dt>
            @Html.DisplayNameFor(model => model.ArtsMartiaux)
        </dt>
        @{
            if (Model.ArtsMartiaux.Count > 0)
            {
                foreach (var artMartial in Model.ArtsMartiaux)
                {
                    <dd>
                        @Html.DisplayFor(model => artMartial.Nom)
                    </dd>
                }
            }
        }

        <dt>
            @Html.DisplayNameFor(model => model.Potentiel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Potentiel)
        </dd>
    </dl>
</div>
