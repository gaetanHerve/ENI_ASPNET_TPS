@model MODULE6_TP1.Models.SamouraiVM

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Samourai</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Samourai.Force, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Samourai.Force, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Samourai.Force, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Samourai.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Samourai.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Samourai.Nom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ArmesDisponibles, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownListFor(model => model.IdArme, Model.ArmesDisponibles.Select(item => new SelectListItem { Text = item.Nom, Value = item.Id.ToString() }),
            "Aucune arme", new { htmlAttributes = new { @class = "form-control" } })
        <br />
        @Html.ValidationMessageFor(model => model.IdArme, "", new { @class = "text-danger" })
    </div>

    @{
        if (Model.ArtsDisponibles.Count > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ArtsDisponibles, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.ListBoxFor(model => model.IdsSelectedArts, Model.ArtsDisponibles.Select(item => new SelectListItem { Text = item.Nom, Value = item.Id.ToString() }),
                    new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.ValidationMessageFor(model => model.IdsSelectedArts, "", new { @class = "text-danger" })
            </div>
        }
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
